# ==============================================
# EVENT PLANNER - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ==============================================
# DATABASE
# ==============================================
DATABASE_URL="postgresql://user:password@localhost:5432/event_planner"

# ==============================================
# NEXTAUTH CONFIGURATION
# ==============================================
NEXTAUTH_SECRET="your-super-secret-key-here-min-32-chars"
NEXTAUTH_URL="http://localhost:3001"
NEXT_PUBLIC_APP_URL="http://localhost:3001"

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# --- OPTION 1: SendGrid (Recommended) ---
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY="SG.your_sendgrid_api_key_here"
EMAIL_FROM="noreply@yourdomain.com"

# --- OPTION 2: SMTP (Gmail, Outlook, Custom) ---
# Uncomment and configure if using SMTP instead of SendGrid

# Gmail Example:
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-16-char-app-password"
# SMTP_FROM="your-email@gmail.com"
# SMTP_SECURE="false"

# Outlook Example:
# SMTP_HOST="smtp.office365.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@outlook.com"
# SMTP_PASS="your-password"
# SMTP_FROM="your-email@outlook.com"
# SMTP_SECURE="false"

# Custom SMTP:
# SMTP_HOST="smtp.yourdomain.com"
# SMTP_PORT="587"
# SMTP_USER="noreply@yourdomain.com"
# SMTP_PASS="your-password"
# SMTP_FROM="noreply@yourdomain.com"
# SMTP_SECURE="false"

# ==============================================
# FILE STORAGE (Optional)
# ==============================================
# Supabase Storage (for image uploads)
# Get credentials from: https://app.supabase.com
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# ==============================================
# PAYMENT GATEWAY (Optional)
# ==============================================
# Razorpay
# RAZORPAY_KEY_ID="your_razorpay_key_id"
# RAZORPAY_KEY_SECRET="your_razorpay_key_secret"

# Stripe
# STRIPE_PUBLIC_KEY="pk_test_..."
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."

# ==============================================
# ANALYTICS (Optional)
# ==============================================
# Google Analytics
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# ==============================================
# FEATURE FLAGS (Optional)
# ==============================================
# Enable/disable features
# ENABLE_SEAT_SELECTION="true"
# ENABLE_PAYMENT_GATEWAY="true"
# ENABLE_EMAIL_NOTIFICATIONS="true"

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Set to 'development' or 'production'
NODE_ENV="development"

# Enable debug logs
# DEBUG="true"

# ==============================================
# NOTES
# ==============================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual values
# 3. Never commit .env to git
# 4. For production, set these in your hosting platform
# 5. Restart server after changing .env values
