# Application URLs
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=change_me_in_prod

# Database (local Postgres example)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/event_planner?schema=public

# SMTP / Email
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_SECURE=false
EMAIL_SERVER_USER=your_smtp_user
EMAIL_SERVER_PASSWORD=your_smtp_password
EMAIL_FROM="Event Planner <noreply@yourdomain.com>"

# SMSMode (Free SMS API - no subscription fees)
SMSMODE_API_KEY=your_smsmode_api_key_here
SMSMODE_SENDER=YourSender
# Note: WhatsApp not supported with SMSMode - use WhatsApp Business API separately

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# INSTAGRAM_CLIENT_ID=
# INSTAGRAM_CLIENT_SECRET=

# Internal API (if using external Java API)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8081
INTERNAL_API_BASE_URL=http://localhost:8081

# Google Places API (for venue suggestions)
# Get your key at: https://console.cloud.google.com/apis/credentials
GOOGLE_PLACES_API_KEY=

# Optional: OpenTripMap API (alternative venue source)
# Get your key at: https://opentripmap.io/product
OPENTRIPMAP_API_KEY=

# Optional: Stripe (for SaaS billing)
STRIPE_SECRET_KEY=
STRIPE_PRICE_PRO=
STRIPE_PRICE_BUSINESS=
STRIPE_WEBHOOK_SECRET=

# Eventbrite API (for Browse Events integration)
# Get your token at: https://www.eventbrite.com/account-settings/apps
NEXT_PUBLIC_EVENTBRITE_TOKEN=

# Cloudinary (Required for Vercel/Production file uploads)
# Get keys at: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
