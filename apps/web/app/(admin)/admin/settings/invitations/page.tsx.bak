"use client"

import { useState, useEffect } from 'react'
export const dynamic = 'force-dynamic'
import { useSession } from 'next-auth/react'
import { Mail, Users, Gift, Send, Plus, Edit, Trash2, CheckCircle } from 'lucide-react'
type PromoCode = {
  id: string
  code: string
  discountType: 'PERCENT' | 'FIXED'
  discountValue: number
  eligibilityCriteria?: string
  description?: string
}
type Invitation = {
  email: string
  name?: string
  eventId?: string
  promoCode?: string
  eligibilityReason: string
  status: 'PENDING' | 'SENT' | 'ACCEPTED' | 'EXPIRED'
  sentAt?: string
  acceptedAt?: string
  createdAt: string
}

export default function InvitationsPage() {
  const { data: session } = useSession()
  const [invitations, setInvitations] = useState<Invitation[]>([])
  const [promoCodes, setPromoCodes] = useState<PromoCode[]>([])
  const [loading, setLoading] = useState(true)
  const [showForm, setShowForm] = useState(false)
  const [formData, setFormData] = useState({
    emails: '',
    names: '',
    eventId: '',
    promoCodeId: '',
    eligibilityReason: '',
    customMessage: ''
  })
  useEffect(() => {
    fetchData()
  }, [])
  const fetchData = async () => {
    try {
      setLoading(true)
      
      const [invitationsRes, promoCodesRes] = await Promise.all([
        fetch('/api/admin/invitations', { credentials: 'include' }),
        fetch('/api/admin/promo-codes', { credentials: 'include' })
      ])
      if (invitationsRes.ok) {
        const invitationsData = await invitationsRes.json()
        setInvitations(invitationsData)
      }
      if (promoCodesRes.ok) {
        const promoCodesData = await promoCodesRes.json()
        setPromoCodes(promoCodesData)
    } catch (error) {
      console.error('Error fetching data:', error)
    } finally {
      setLoading(false)
    }
  }
  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault()
    
      const emails = formData.emails.split('\n').map(e => e.trim()).filter(e => e)
      const names = formData.names.split('\n').map(n => n.trim()).filter(n => n)
      if (emails.length === 0) {
        alert('Please enter at least one email address')
        return
      const response = await fetch('/api/admin/invitations', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({
          emails,
          names: names.length > 0 ? names : undefined,
          eventId: formData.eventId || null,
          promoCodeId: formData.promoCodeId || null,
          eligibilityReason: formData.eligibilityReason,
          customMessage: formData.customMessage
        })
      })
      if (response.ok) {
        const result = await response.json()
        await fetchData()
        resetForm()
        alert(`${result.sent} invitations sent successfully!`)
      } else {
        const error = await response.json()
        alert(error.message || 'Failed to send invitations')
      alert('Error sending invitations')
  const resendInvitation = async (invitationId: string) => {
      const response = await fetch(`/api/admin/invitations/${invitationId}/resend`, {
        credentials: 'include'
        alert('Invitation resent successfully!')
        alert(error.message || 'Failed to resend invitation')
      alert('Error resending invitation')
  const deleteInvitation = async (invitationId: string) => {
    if (!confirm('Are you sure you want to delete this invitation?')) return
      const response = await fetch(`/api/admin/invitations/${invitationId}`, {
        method: 'DELETE',
        alert('Invitation deleted!')
        alert('Failed to delete invitation')
      alert('Error deleting invitation')
  const resetForm = () => {
    setFormData({
      emails: '',
      names: '',
      eventId: '',
      promoCodeId: '',
      eligibilityReason: '',
      customMessage: ''
    })
    setShowForm(false)
  const getStatusBadge = (status: string) => {
    const badges = {
      PENDING: 'bg-yellow-100 text-yellow-800',
      SENT: 'bg-blue-100 text-blue-800',
      ACCEPTED: 'bg-green-100 text-green-800',
      EXPIRED: 'bg-red-100 text-red-800'
    return badges[status as keyof typeof badges] || 'bg-gray-100 text-gray-800'
  if (loading) {
    return (
      <div className="p-6">
        <div className="animate-pulse space-y-4">
          <div className="h-8 bg-gray-200 rounded w-1/3"></div>
          <div className="h-64 bg-gray-200 rounded"></div>
        </div>
      </div>
    )
  return (
    <div className="p-6 space-y-6">
      <div className="flex items-center justify-between">
        <div>
          <h1 className="text-2xl font-bold flex items-center gap-2">
            <Mail className="h-6 w-6 text-blue-600" />
            User Invitations with Promo Codes
          </h1>
          <p className="text-gray-600 mt-1">
            Send personalized invitations with promo codes based on eligibility
          </p>
        <button
          onClick={() => setShowForm(true)}
          className="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 flex items-center gap-2"
        >
          <Plus className="h-4 w-4" />
          Send Invitations
        </button>
      {/* Stats Cards */}
      <div className="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div className="bg-white p-4 rounded-lg border">
          <div className="flex items-center gap-2">
            <Mail className="h-5 w-5 text-blue-600" />
            <span className="text-sm font-medium text-gray-600">Total Sent</span>
          </div>
          <p className="text-2xl font-bold mt-1">{invitations.filter(i => i.status === 'SENT').length}</p>
            <CheckCircle className="h-5 w-5 text-green-600" />
            <span className="text-sm font-medium text-gray-600">Accepted</span>
          <p className="text-2xl font-bold mt-1">{invitations.filter(i => i.status === 'ACCEPTED').length}</p>
            <Users className="h-5 w-5 text-yellow-600" />
            <span className="text-sm font-medium text-gray-600">Pending</span>
          <p className="text-2xl font-bold mt-1">{invitations.filter(i => i.status === 'PENDING').length}</p>
            <Gift className="h-5 w-5 text-purple-600" />
            <span className="text-sm font-medium text-gray-600">With Promo</span>
          <p className="text-2xl font-bold mt-1">{invitations.filter(i => i.promoCode).length}</p>
      {/* Invitations Table */}
      <div className="bg-white rounded-lg border">
