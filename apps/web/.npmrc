# Ensure package-lock.json is created
package-lock=true

# Use exact versions in package-lock.json
save-exact=true

# Use npm's legacy peer deps to avoid peer dependency issues
legacy-peer-deps=true

# Set the engine-strict to true to ensure Node.js and npm version compatibility
engine-strict=true

# Set the registry to the public npm registry
registry=https://registry.npmjs.org/

# Configure the cache settings
cache=${HOME}/.npm/_cacache
prefer-offline=true

# Configure the log level
loglevel=error
